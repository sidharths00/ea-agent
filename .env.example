# ── Anthropic ──────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ── AgentMail ──────────────────────────────────────────────────────────────────
AGENTMAIL_API_KEY=...
# The inbox ID for your agent inbox (created via npm run create:inbox)
AGENTMAIL_INBOX_ID=...

# ── Google Calendar ────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
# Redirect URI used during OAuth (for local setup: http://localhost:3001/oauth/callback)
GOOGLE_REDIRECT_URI=http://localhost:3001/oauth/callback
# Obtained by running: npm run setup:google
GOOGLE_REFRESH_TOKEN=...
# The calendar ID to check/book on (usually your primary email address)
GOOGLE_CALENDAR_ID=primary

# ── Server ─────────────────────────────────────────────────────────────────────
PORT=3000
# Secret token to verify AgentMail webhook requests
WEBHOOK_SECRET=your-random-secret-here

# ── Agent identity ─────────────────────────────────────────────────────────────
OWNER_NAME=Your Name
OWNER_TIMEZONE=America/New_York
# The full email address of the agent inbox (shown in system prompt, used for loop detection)
# Free plan: ea@agentmail.to  |  Paid plan: yourname@yourdomain.com
AGENT_EMAIL=ea@agentmail.to
